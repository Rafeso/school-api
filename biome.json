{
	"$schema": "https://biomejs.dev/schemas/1.5.0/schema.json",
	"files": { "ignore": [".commitlintrc", ".czrc"] },
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"quoteStyle": "single",
			"lineWidth": 80
		}
	}
}
